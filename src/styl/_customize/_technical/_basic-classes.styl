.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	&-lg
		padding $gutters-lg
	
.gutter
	&-top
		padding-top $gutter-top
		&-lg
			padding-top $gutter-top-lg
	&-bottom
		padding-bottom $gutter-bottom
		&-lg
			padding-bottom $gutter-bottom-lg
			
.page-gutter-bottom
	padding-bottom 30px
		
.main-gutter-top
	padding-top 90px
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 46px $Tenor
	line-height 51px
	margin-bottom 30px
	&.no-margin
		margin-bottom 0
	&-sm
		font 26px $Tenor
		line-height 27px
		margin-bottom 40px
		
.sect-description
	margin-bottom 35px
	&.no-margin
		margin-bottom 0
		

.title
	font 60px $Tenor
	line-height 67px
	margin-bottom 30px
	
.page-title
	font 60px $Tenor
	line-height 67px
	margin-bottom 40px
	

		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
	

.content
	color $opacity-text-color
	font-size 17px
	*
		&:last-child
			margin-bottom 0
			
	h1
		color $text-color
		font 50px $Tenor
		margin-bottom 40px
			
	h2
		font 32px $Tenor
		line-height 35px
		margin-bottom 20px
		color $text-color
		
	h3
		font 20px $Med
		text-transform uppercase
		color $text-color
		margin-bottom 15px
		
	p + h3,
	ul + h3,
	ol + h3,
	img + h3
		margin-top 60px
		
	a
		color inherit
		border-bottom 1px solid currentColor
		&:hover
			color $accent-color
		
		

	p + h2,
	ul + h2,
	ol + h2,
	img + h2
		margin-top 60px
		

	p + ul,
	p + ol
		margin-top -25px
			
	
	strong, b
		font-family $Medium
		

	ul, ol
		margin-bottom 25px
		li
			display block
			position relative
			margin-bottom 10px
			
			&:last-child
				margin-bottom 0
				
	ul.children
		margin-top 10px
		padding-left 15px
				
	ul
		li
			&:before
				pseudo()
				width 2px
				height 2px
				border-radius 50%
				margin-right 10px
				background-color currentColor
				vertical-align middle
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				
	img
		display block
		width auto
		max-width 100%
		margin 35px 0
				
	p
		margin-bottom 25px
		
.content-lg-titles
	*:first-child
		margin-top 0 !important
	h2
		font-size 46px
		line-height 1.1
		margin 125px 0 30px 0
		
	p + h2,
	ul + h2,
	ol + h2,
	img + h2
		margin-top 125px
				

.border-bottom
	border-bottom 1px solid $border-color
	
.subtitle
	margin-bottom 24px
	font-size 24px
	

.opacity-text-color
	color $opacity-text-color
	
.no-margin
	margin 0 
	
.margin-b-65
	margin-bottom 65px
	
.margin-b-20
	margin-bottom 20px


.sect-entering
	margin-bottom 60px
	margin-left -30px
	margin-right -30px
	.sect-title
		padding-left 30px
		padding-right 30px
		margin-bottom 0
		

		
	.sect-description
		flex 1
		width 100%
		max-width 760px
		padding-left 30px
		padding-right 30px
		
	.slider-controls
		margin-top 20px
		

.page-entering
	display flex
	align-items center
	justify-content space-between
	flex-wrap nowrap
	padding-bottom 65px
	border-bottom 1px solid $border-color
	margin-bottom 95px
	&__content
		flex 1
		
	&__img
		max-width 450px
		margin-left 50px
		img
			display block