.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	&-lg
		padding $gutters-lg
	
.gutter
	&-top
		padding-top $gutter-top
		&-lg
			padding-top $gutter-top-lg
	&-bottom
		padding-bottom $gutter-bottom
		&-lg
			padding-bottom $gutter-bottom-lg
		
.main-gutter-top
	padding-top 90px
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 46px $Tenor
	line-height 51px
	margin-bottom 30px
	&.no-margin
		margin-bottom 0
		
.sect-description
	margin-bottom 35px
	&.no-margin
		margin-bottom 0
		

.title
	font 60px $Tenor
	line-height 67px
	margin-bottom 30px
	&-h3-size
		font-size 26px
		line-height 27px
		margin-bottom 40px

		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
	

.content
	*
		&:last-child
			margin-bottom 0
			
	h2,h3,h3,h4,h5,h6
		line-height 1
		font-family $Bold
		
	strong, b
		font-family $Bold
		

	ul, ol
		li
			display block
			position relative
			margin-bottom 10px
			
			&:last-child
				margin-bottom 0
				
	ul
		li
			&:before
				pseudo()
				width 4px
				height 4px
				border-radius 50%
				margin-right 4px
				background-color $text-color
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				
	p
		margin-bottom 25px
		
				

.border-bottom
	border-bottom 1px solid $border-color
	

.no-margin
	margin 0
