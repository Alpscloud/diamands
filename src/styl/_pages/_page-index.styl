
.promo-block
	position relative
	padding-bottom 100px
	padding-top 50px
	border-bottom 1px solid $border-color
	&__content
		flex none
		max-width 620px
		width 100%
		position relative
		z-index 2
	
	&__btns
		display flex
		flex-wrap nowrap
		.btn
			margin-right 20px
			&:last-child
				margin-right 0
				
	&__img
		width 760px
		flex none
		pointer-events none
		
		// position absolute
		// left 100%
		// vertical-center()
		margin-left 90px
		img
			display block
			width 100%
			
	&__advantages
		margin-bottom 70px
		display flex
		flex-wrap nowrap
		
	&__advantage
		display flex
		flex-wrap nowrap
		align-items center
		font-size 17px
		line-height 18px
		color $opacity-text-color
		padding-right 25px
		margin-right 25px
		position relative
		&:after
			pseudo()
			position absolute
			vertical-center()
			width 1px
			height 35px
			background-color $border-color
			right 0
		&:last-child
			padding-right 0
			margin-right 0
			&:after
				display none
			
		&--ic
			display inline-block
			height 36px
			width 36px
			flex none
			background-repeat no-repeat
			background-size contain
			margin-right 10px
		&--value
			font 34px $Tenor
			line-height 1
			display inline-block
			margin-right 12px
			text-align center
			span
				text-transform uppercase
				display block
				font-size 13px
				line-height .4em
				letter-spacing -0.05em
				
// Categories
.sect__categories
	padding-top 50px
	

		
.category-card
	display flex
	height 100%
	align-items center
	justify-content space-between
	padding 12px 12px 12px 40px
	border 3px solid $color-bg
	&:hover
		background-color transparent
		
	p
		color rgba($text-color, .6)
		font-size 16px
		line-height 18px
		margin-bottom 24px
	.btn
		width 100%
		max-width 210px
		padding-left 15px
		padding-right 15px
	&__text
		width 100%
		max-width 250px
	&__title
		font 24px $Med
		margin-bottom 13px
		color $text-color
		a
			color $text-color
			&:hover
				color $accent-color
				
	&__thumbnail
		flex-col-center()
		width 188px
		height 188px
		flex none
		img
			@extends .content-img
			
	&__wrapper
		margin-bottom 25px
		
.categories-cards
	margin-bottom -25px
	
// DEscription
.description
	&__row
		margin-left -25px
		margin-right -25px
	&-img
		height 100%
		padding-top 0
		background-color $color-bg
		&__wrapper
			flex 1
			width 100%
			max-width 720px
			padding-left 25px
			padding-right 25px
	&-content
		padding-left 25px
		padding-right 25px
		flex 1
		
	&-information
		&__row
			margin-left -30px
			margin-right -30px
			margin-bottom -30px
		&__item
			padding-left 30px
			padding-right 30px
			margin-bottom 30px
			font-size 17px
			line-height 18px
			&--ic
				display block
				width 56px
				height 56px
				background-position 50%
				background-repeat no-repeat
				background-size contain
				margin-bottom 10px
				
// Sect form
.form-wrapper__row
	margin-left -35px
	margin-right -35px
	.form-wrapper
		width 100%
		flex 1
		max-width 640px
		padding-left 35px
		padding-right 35px
		
.form-text
	height 100%
	border 1px solid $border-color
	padding 60px 60px 20px 60px
	font-size 17px
	
	&__wrapper
		flex 1
		padding-left 35px
		padding-right 35px
		padding-top 28px
		


// ADvantages
.advantages-wrapper
	padding 50px
.advantages
	justify-content space-around
.advantage
	display flex
	flex-wrap nowrap
	flex 1
	align-items center
	font-size 17px
	line-height 18px
	color $opacity-text-color
	position relative
	
		
	&-value
		font 32px $Tenor
		line-height 1
		display inline-block
		margin-right 12px
		text-align left
		span
			text-transform uppercase
			display block
			font-size 12px
			line-height .4em
			letter-spacing -0.05em
		&__price
			position relative
			&:after
				pseudo()
				width 18px
				height 22px
				background url('../img/icons/svg/uah.svg') no-repeat / contain
				margin-left 2px
				

// Benefits
.benefit
	margin-bottom 50px
	color $opacity-text-color
	&-title
		text-transform uppercase
		font 20px $Med
		margin-bottom 14px
	
.benefits
	margin-bottom -50px
	
// Brands
.sect__brands
	padding-bottom 200px
	
.brands
	margin-left -25px
	margin-right -25px
	margin-bottom -15px
	
	
.brand
	padding-left 25px
	padding-right 25px
	margin-bottom 15px
	height 50px
	flex-col-center()

	img
		@extends .content-img
		
// Feedbacks
.sect__feedbacks
	padding-bottom 165px
.feedbacks-description
	width 360px
	margin-right 40px
	flex none
	.row
		margin-bottom 40px
		
	p
		max-width 320px
		
// Consultation
.consultation
	border 3px solid $color-bg
	&-img
		position relative
		width 100%
		max-width 570px
		&:before,
		&:after
			pseudo()
			position absolute
			z-index 1
			background-repeat no-repeat
			background-size contain
			background-position center
		&:before
			width 215px
			height 200px
			background-image url('../img/diamand-lg.png')
			right 35px
			top -80px
		&:after
			width 50px
			height 45px
			background-image url('../img/diamand-sm.png')
			bottom 45px
			left 210px
		img
			display block
			width 100%
			height auto
			object-fit cover
			bottom 0
			left 0
			position absolute
	&-form
		flex 1
		padding 55px 100px 55px 120px
		.sect-title
			line-height 1
		