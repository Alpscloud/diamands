
.promo-block
	position relative
	padding-bottom 100px
	padding-top 50px
	border-bottom 1px solid $border-color
	&__content
		flex none
		max-width 620px
		width 100%
	
	&__btns
		display flex
		flex-wrap nowrap
		.btn
			margin-right 20px
			&:last-child
				margin-right 0
				
	&__img
		width 920px
		flex none
		// position absolute
		// left 100%
		// vertical-center()
		margin-left 90px
		img
			display block
			width 100%
			
	&__advantages
		margin-bottom 70px
		display flex
		flex-wrap nowrap
		
	&__advantage
		display flex
		flex-wrap nowrap
		align-items center
		font-size 17px
		line-height 18px
		color $opacity-text-color
		padding-right 25px
		margin-right 25px
		position relative
		&:after
			pseudo()
			position absolute
			vertical-center()
			width 1px
			height 35px
			background-color $border-color
			right 0
		&:last-child
			padding-right 0
			margin-right 0
			&:after
				display none
			
		&--ic
			display inline-block
			height 36px
			width 36px
			flex none
			background-repeat no-repeat
			background-size contain
			margin-right 10px
		&--value
			font 34px $Tenor
			line-height 1
			display inline-block
			margin-right 12px
			text-align center
			span
				text-transform uppercase
				display block
				font-size 17px
				line-height .4em
				
// Categories
.sect__categories
	padding-top 50px
	
.categories
	&-entering
		margin-bottom 60px
		
	.sect-title
		width 100%
		max-width 380px
		
	.sect-description
		width 100%
		max-width 760px
		
.category-card
	display flex
	height 100%
	align-items center
	justify-content space-between
	padding 12px 12px 12px 40px
	p
		color rgba($text-color, .6)
		font-size 16px
		line-height 18px
		margin-bottom 24px
	.btn
		width 100%
		max-width 210px
		padding-left 15px
		padding-right 15px
	&__text
		width 100%
		max-width 250px
	&__title
		font 24px $Med
		margin-bottom 13px
		a
			color $text-color
			&:hover
				color $accent-color
				
	&__thumbnail
		flex-col-center()
		width 188px
		img
			@extends .content-img
	&__wrapper
		margin-bottom 25px
		
.categories-cards
	margin-bottom -25px