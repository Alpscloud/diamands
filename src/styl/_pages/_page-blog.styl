.sect__blog
	padding-top 65px
	

.article-card
	&__thumbnail
		display block
		padding-top 63%
		margin-bottom 20px
		&:before
			pseudo()
			position absolute
			fullSize()
			background-color rgba(#FBFBFB, .84)
			transition opacity .17s ease-in-out
			opacity 0
			z-index 1
		.btn
			font 17px $Reg
			padding-left 40px
			padding-right 40px
			position absolute
			position-center()
			z-index 3
			opacity 0
		
	&__preview
		color $opacity-text-color
		font-size 17px
		line-height 22px
	&__title
		font 26px $Tenor
		line-height 29px
		margin-bottom 11px
		a
			color $text-color
			border-bottom 1px solid transparent
	&:hover
		.article-card
			&__title
				a
					border-color currentColor
			&__thumbnail
				&:before
					opacity 1
				.btn
					opacity 1
	&__wrapper
		margin-bottom 40px
		&:nth-child(3n+1)
			padding-top 44px
		&:nth-child(3n+3)
			padding-top 22px
		&:nth-child(1),
		&:nth-child(2),
		&:nth-child(3)
			padding-top 0
		
.article-date
	color $light-text-color
	font-size 14px
	margin-bottom 25px
	

.sect__article
	padding-top 40px
	
.article
	
	padding-bottom 90px
	border-bottom 1px solid $border-color
	&-wrapper
		flex 1
		max-width 800px
	&-thumbnail
		margin-bottom 44px
		img
			display block
			width 100%
			
	.article-date
		margin-bottom 15px
		
	&-title
		font 50px $Tenor
		line-height 50px
		margin-bottom 30px
		

.share
	margin-top 60px
	&-label
		display inline-block
		font 24px $Tenor
		margin-right 16px
		
	.socials
		height 36px
		li
			margin-right 14px
			&:last-child
				margin-right 0
		a
			width 36px
			height 36px
			flex-col-center()
			
			svg
				width auto
				height auto
		

.text-page-gutter
	padding-top 100px
	
