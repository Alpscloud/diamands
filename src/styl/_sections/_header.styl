.header
	background-color $header-bg
	position fixed
	top 0
	left 0
	width 100%
	z-index 91
	height 90px
	display flex
	align-items center
	padding-top 10px
	padding-bottom 10px
	border-bottom 1px solid $border-color

	&-contacts
		display flex
		align-items center
		justify-content flex-end
		
		.socials
			margin-left 25px
			
	&-btn
		.header-contacts
			margin-right 30px