// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1450px)
	.sect-title
		font-size 40px
		line-height 46px

+max-screen(1365px)
	.container
		padding-left 40px
		padding-right 40px
		max-width 100%
		

	// .description-content
	// 	.sect-title
	// 		br
	// 			display none
				
	.description-content, 
	.description-img__wrapper
		padding-left 15px
		padding-right 15px
		
	.description__row
		margin-left -15px
		margin-right -15px
		

	.form-wrapper__row 
		margin-left -15px
		margin-right -15px
		.form-wrapper
			padding-left 15px
			padding-right 15px
			
	.form-text
		padding 65px 45px 40px 50px
		&__wrapper
			padding-left 15px
			padding-right 15px
			
	.form-notice
		font-size 13px
		br
			display none

		


		
+max-screen(1280px)
	.title
		font-size 50px
		line-height 46px
		margin-bottom 40px
		

	.promo-block
		padding-top 120px
		min-height calc(100vh - 90px)
		&__content
			max-width 520px
		&__img
			width 600px
			margin-left 0
		&__advantages
			margin-bottom 55px
		&__advantage
			flex-wrap wrap
			padding-right 40px
			margin-right 40px
			max-width 180px
			
			&:after
				transform none
				bottom 0
				height 36px
			p
				width 100%
				margin-top 8px
				font-size 16px
				
+max-screen(1024px)
				
	.description-information__row
		justify-content flex-start
		flex-wrap wrap
		margin-bottom -35px
		
	.description-information__item
		width 33.3333%
		margin-bottom 35px
		
			










+max-screen(992px)
	.sect-title
		font-size 36px
		line-height 39px
		
	.gutter-bottom-lg
		padding-bottom 90px
		
	// Header
	.header
		.phone-link
			font-size 18px
		&__row
			padding-right 50px
		.btn
			span
				display none
				
	.nav-wrapper
		position fixed
		top 90px
		left 0
		z-index 90
		height calc(100vh - 90px)
		width 100%
		background-color $basic-white-color
		padding 20px 40px 60px
		flex none
		margin 0
		display block
		overflow-y auto
		transition all .23s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
		.header-contacts
			display block !important
			padding-top 25px
			
			.socials
				margin-left 0
				margin-top 20px
			
	.nav-dropdown
		transition none
		opacity 1
		visibility visible
		pointer-events inherit
		position relative
		box-shadow none
		min-width auto
		&__wrapper
			margin-bottom 0
		&__btn
			display none
			
	.nav
		padding-bottom 25px
		margin-bottom 25px
		border-bottom 1px solid $border-color
		&-title
			display block
		ul
			li
				border none
				margin-bottom 30px
				&:last-child
					margin-bottom 0
				a
					padding 0
					font-size 17px
					padding-right 20px
					position relative
					&:after
						pseudo()
						width 9px
						height 15px
						background url('../img/icons/svg/nav-arrow.svg') 50% no-repeat / contain
						position absolute
						vertical-center()
						right 0
						
	.nav-secondary
		display block
		
	.btn-hamburger
		display inline-block
		
	.title
		font-size 44px
		line-height 49px
		margin-bottom 40px
		
	.promo-block
		&__content
			max-width 460px
		&__img
			width 410px
			margin-left -80px
			
	.btn
		font-size 14px
		&-with-ic
			svg
				

	.sect-entering
		flex-wrap wrap
		margin-bottom 35px
		.sect-title
			width 100%
			margin-bottom 26px
			
	.sect__categories
		padding-bottom 30px
			
	.category-card
		min-height 212px
		&__wrapper
			width 100%
			&:last-child
				margin-bottom 0
		&__text
			max-width none
			
	.categories-cards
		margin-bottom 0
		
	.description
		&__row
			flex-wrap wrap
		&-img
			height auto
			background-color transparent
			&:before
				pseudo()
				width 100%
				height 80%
				background-color $color-bg
				position absolute
				bottom 0
			img
				position relative
				width 100%
				height auto
				transform none
				top auto
				left auto
			&__wrapper
				max-width 100%
				flex none
				
				margin-bottom 60px
		&-content
			flex none
			width 100%
			
				
					







+max-screen(767px)
	.container
		padding-left 20px
		padding-right 20px
		
	.main-gutter-top
		padding-top 59px
		
	// Header
	.header-contacts
		display none
		
	.header
		height 60px
		padding-top 5px
		padding-bottom 5px
		
		.btn
			min-width 105px
			height 40px
			font-size 14px
			padding 5px
		
	.btn-hamburger
		right 15px
		
	.logo
		img
			width 145px
			
	.nav-wrapper
		height calc(100vh - 60px)
		top 60px
		padding-left 20px
		padding-right 20px
		












+max-screen(700px)
	.gutter-bottom
		padding-bottom 40px
		
	// promo
	.promo-block
		flex-wrap wrap
		height auto
		min-height auto
		padding 55px 0 100px
		justify-content flex-end
		
		&__img
			order 1
			width 340px
			height 200px
			background-color $color-bg
			margin-left 0
			margin-right -100px
			margin-bottom 50px
			img
				position absolute
				positio-center()
				margin-left -40px
				width 420px
		&__content
			order 2
			max-width 100%
			
		&__advantage
			padding-right 25px
			margin-right 40px
			p
				font-size 14px
				
			&--ic
				width 33px
				height 33px
				margin-right 8px
			&--value
				margin-right 0
				font-size 32px
			
		&__advantages
			margin-bottom 40px
			
		&__btns
			flex-wrap wrap
			.btn
				width 100%
				margin-right 0
				margin-bottom 16px
				&:last-child
					margin-bottom 0
			
	.title
		font-size 36px
		line-height 38px
		margin-bottom 30px
		br
			display none
			
	.sect-title
		font-size 32px
		line-height 39px
		margin-bottom 30px
		
	.sect-entering
		margin-bottom 40px
		
	.sect__categories
		padding-top 40px
		
		
	.category-card
		padding 35px 5px 35px 20px
		min-height 130px
		&__wrapper
			margin-bottom 30px
		p
			font-size 14px
			line-height 18px
			margin-bottom 0
			br
				display none
			
		.btn
			display none
		&__text
			flex 1
			max-width 200px
			margin-right 15px
		&__thumbnail
			width 100px
			height 100px
			img
				max-width 80px
				max-height 80px
		&__title
			font-size 19px
			line-height 20px
			margin-bottom 6px
			




			

+max-screen(550px)
	.description-information__item
		font-size 15px
		line-height 17px
		width 50%
		margin-bottom 25px
		&--ic
			width 42px
			height 42px
			margin-bottom 10px
		
	.description-information__row
		margin-bottom -25px
		
	.sect-title
		font-size 30px
		line-height 30px











