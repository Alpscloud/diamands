.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
.swiper-container
	*
		box-sizing border-box
		
.slider-controls
	width 106px
	display flex
	flex-wrap nowrap
	justify-content space-between
	&__btn
		display inline-block
		width 46px
		height 46px
		position relative
		border 1px solid #EEEEEE
		svg
			svg()
			position absolute
			position-center()
			width 20px
			height 9px
			fill #292929
			opacity .2
		&:hover
			border-color $accent-color
			svg
				opacity 1
				

.products-slider
	margin-left -10px
	margin-right -10px
	width 1680px
	
	.swiper-slide
		padding-left 10px
		padding-right 10px
		width 240px
		

.product-slide
	&__img
		height 300px
		background-color $color-bg
		position relative
		margin-bottom 12px
		img
			display block
			position absolute
			width 100%
			height 100%
			object-fit cover
			position-center()
			
	&__title
		font-size 16px
		line-height 17px
	
	&__brand
		font-size 14px
		margin-top 8px
		color rgba($text-color, .4)
		

.feedbacks-slider
	margin-left -15px
	margin-right -15px
	width 1170px
	
	.swiper-slide
		padding-left 15px
		padding-right 15px
		width 390px
		
.feedback
	padding 33px 35px 50px
	&-content
		position relative
		padding-top 45px
		&:before
			pseudo()
			position absolute
			top 0
			left 0
			width 21px
			height 16px
			background url('../img/icons/svg/quote.svg') no-repeat / contain
	&-text
		color $opacity-text-color
		font-size 20px
		line-height 25px
		margin-bottom 30px
	&-author
		font-size 16px
		line-height 17px
	&-date
		color $light-text-color 
		font-size 14px
		margin-top 6px
		line-height 17px