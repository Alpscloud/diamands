


.form
	&-input
		display block
		width 100%
		padding 12px 15px
		text-align left
		border 1px solid $input-border-color
		font 16px $Reg
		color $text-color
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 16px $Reg
			color rgba($text-color,.5)
		&::-moz-placeholder
			font 16px $Reg
			color rgba($text-color,.5)
		&:-moz-placeholder
			font 16px $Reg
			color rgba($text-color,.5)
		&:-ms-input-placeholder
			font 16px $Reg
			color rgba($text-color,.5)
			
	
			
	&-label
		display block
		margin-bottom 6px
		text-transform uppercase
		font-size 14px
		
	&-error
		color red
		font-size 12px
		margin-top 5px
		display none
			
	&-group
		position relative
		margin-bottom 15px
	
			
		&.is-error
			.form-input
				border-color red
			.form-error
				display block
			
		
			
	&-textarea
		min-height 125px
		
	&-groups
		&__row
			margin-left -7.5px
			margin-right -7.5px
			
			
			.form-group
				padding-left 7.5px
				padding-right 7.5px
				
				.btn
					width 100%
					padding-left 10px
					padding-right 10px
					
			.form-submit
				padding-left 7.5px
				padding-right 7.5px
				
	&-file
		display block
		position relative
		width 100%
		&.is-attached
			pointer-events none
			input
				pointer-events none
			.form-file
				&__attached
					opacity 0
					visibility hidden
					pointer-events none
				&__result
					opacity 1
					visibility visible
					pointer-events auto
					
		.btn
			padding-top 14px
			padding-bottom 14px
		input
			display none
			
		&__result
			color rgba($text-color, .6)
			text-transform none
			font-family $Reg
			position absolute
			position-center()
			width 100%
			height 100%
			z-index 1
			background-color $basic-white-color
			transition all .17s ease-in-out
			opacity 0
			visibility hidden
			pointer-events none
			&--text
				white-space nowrap
				overflow hidden
				text-overflow ellipsis
			
			
		

.clear-ic
	display inline-block
	width 12px !important
	height 12px !important
	fill none
	svg()
	stroke $text-color 
	stroke-width 1.5px
	margin-left 5px

.form-group__col
	display flex
	flex-direction column
	.form-group
		flex 1
		display flex
		flex-direction column
		.form-input, 
		.btn,
		.form-file
			flex 1
			
		.form-file .btn
			height 	100%
		&:last-child
			margin-bottom 0
			



			


.hidden-label
	opacity 0

.form-select
	position relative
	&:after
		pseudo()
		pointer-events none
		width 8px
		height 3px
		background url('../img/icons/svg/select-arrow.svg') no-repeat / contain
		vertical-center()
		transition transform .17s ease-in-out
		position absolute
		right 15px
	&.is-opened
		&:after
			transform translateY(-50%) rotate(-180deg)
		.form-select__options
			opacity 1
			visibility visible
			pointer-events auto
	&__options
		position absolute
		top 100%
		transition all .17s ease-in-out
		background-color $basic-white-color
		box-shadow 6px 19px 30px rgba(0, 0, 0, 0.05)
		z-index 5
		width 100%
		opacity 0
		visibility hidden
		pointer-events none
		li
			display block
			padding 15px
			text-transform uppercase
			border-bottom 1px solid $border-color
			transition background-color .17s ease-in-out
			&:last-child
				border-bottom none
			&:hover
				cursor pointer
				background-color $border-color


.form-submit
	display flex
	justify-content flex-start
	.btn
		
		width 100%
		max-width 270px
		padding-left 10px
		padding-right 10px
		
	.form-file
		max-width 160px
		margin-right 15px
		.btn
			padding-left 10px
			padding-right 10px
		


.form-notice
	color $opacity-text-color
	font-size 14px
	line-height 16px
	text-align left
	margin-left 24px
	a
		color inherit
		border-bottom 1px solid currentColor
		&:hover
			color $accent-color

.form
	&-checkbox
		display inline-flex
		align-items center
		min-height 30px
		padding-left 46px
		font-size 16px
		position relative
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			top 0
			width 30px
			height 30px
			border 2px solid $border-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 18px 13px
		&:hover
			&:before
				border-color $accent-color
			
		&__label
			display inline-block
			
			input
				display none
				&:checked
					+ span
						&:before
							background-color $accent-color
							border-color $accent-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


.form-wrapper
	position relative
	&.is-active
		.form-success
			opacity 1
			visibility visible
			pointer-events auto
	
.form-success
	position absolute
	top -2px
	left -2px
	bottom -5px
	right -2px
	z-index 3
	background-color $color-bg
	flex-col-center()
	text-align center
	font-size 19px
	line-height 22px
	color rgba($text-color, .8)
	opacity 0
	visibility hidden
	pointer-events none
	transition all .3s ease-in-out
	padding 24px
	
	&__title
		font 60px $Tenor
		line-height 1
		margin-bottom 27px
		color $text-color
	
	.btn-close
		position absolute
		top 24px
		right 24px
