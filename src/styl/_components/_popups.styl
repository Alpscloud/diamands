.popup 
	position fixed
	bottom 0
	left 0
	z-index 90
	width 100%
	height calc(100% - 90px)
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color $popup-overlay-bg
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 960px
		padding 20px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		
	&__title
		font 40px $Tenor
		line-height 44px
		margin-bottom 45px
		
	.btn-close
		position absolute
		top 10px
		right 10px
		z-index 92


.popup-category
	padding-left 25px
	padding-right 25px
	&__link
		display block
		text-align center
		font-size 16px
		text-transform uppercase
		color $text-color
		&:hover
			color $accent-color
		&--img
			flex-col-center()
			width 100%
			height 172px
			margin-bottom 13px
			img
				@extends .content-img
				max-width 140px
				max-height 140px
