.popup 
	position fixed
	bottom 0
	left 0
	z-index 100
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow-y auto
		overflow-x hidden
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)

		padding 20px 20px 50px 20px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 1170px
		padding 90px
		background-color $popup-body-bg
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		
	&__title
		font 40px $Tenor
		line-height 44px
		margin-bottom 45px
		
	.btn-close
		position absolute
		top 25px
		right 25px
		z-index 92


.popup-category
	padding-left 25px
	padding-right 25px
	&__link
		display block
		text-align center
		font-size 16px
		text-transform uppercase
		color $text-color
		&:hover
			.popup-category__link--img
				img
					transform scale(1.05, 1.05)
				&:before
					opacity 1
		&--img
			display block
			width 172px
			height 172px
			margin 0 auto 13px auto
			position relative
			&:before
				pseudo()
				position absolute
				position-center()
				border-radius 50%
				background-color $basic-white-color
				width 100%
				height 100%
				transition opacity .17s ease-in-out
				opacity 0
			img
				@extends .content-img
				position relative
				z-index 1
				transition transform .17s ease-in-out
			
