.content

		
	.su-row
		.su-column
			margin 0
			float none
			margin-top 0 !important
			&.su-column-size
				&-1-2
					width 50%
				&-1-3
					width calc(100% / 3)
				&-1-4
					width 25%
				&-1-5
					width 20%
				&-1-6
					width calc(100% / 6)
				&-1-7
					width calc(100% / 7)
				&-1-8
					width calc(100% / 8)
				&-1-9
					width calc(100% / 9)
				&-1-10
					width calc(100% / 10)
					
		&.service-shapes
			.su-column
				float none
				text-align center
				font-size 14px
				color $text-color
				padding-left 13.5px
				padding-right 13.5px
				margin-bottom 20px
				margin-top 0 !important
				img
					margin 0 auto 16px auto
					width 68px
					height 68px
				
		&.service-params
			&:after
				display none
				
			.su-column
				float none
				margin 0 0 10px 0
				padding-left 5px
				padding-right 5px
				color $text-color
				img
					margin-top 0
					width 56px
					height 56px
					margin-bottom 10px
					
		&.brands-logos
			.su-column
				flex-col-center()
				padding 0 10px
				margin-top 0 !important
				margin-bottom 20px
				img
					@extends .content-img

		&.double-imgs
			.su-column
				width 50%
				flex-col-center()
				padding 10px
				&:first-child
					padding-bottom 0
				img
					@extends .content-img
					margin 0
					
		&.stone-type
			margin-bottom 34px !important
			.su-column
				flex 1
				img
					display block
					width auto
				&:first-child
					width 70px
					margin-right 55px
					flex none
		
	* + .stone-type
		margin-top 40px
							
	.stone-type + p,
	.stone-type + ol,
	.stone-type + ul,
	.stone-type + h2,
	.stone-type + h3,
	.stone-type + h4,
	.stone-type + img
		margin-top 80px				
	// Galleries
	.su-image-carousel
		.flickity-viewport
			overflow visible
			
		.flickity-button,
		.flickity-page-dots
			display none !important
			
		.flickity-slider
			position relative !important
			white-space nowrap
			overflow-x auto
			overflow-y hidden
			padding-bottom 6px
			left auto !important
			transform none !important
			&::-webkit-scrollbar-track
				background-color $border-color
				height 4px

			&::-webkit-scrollbar
				height 5px
			&::-webkit-scrollbar-thumb
				background-color $accent-color
			.su-image-carousel-item
				left auto !important
				position relative !important
				vertical-align top
				display inline-block
				margin-right 20px
				width auto 
				.su-image-carousel-item-content
					margin 0
					height 207px 
					border none !important
					
					img
						@extends .content-img
						padding 0
						border none
						border-radius 0
						
				a
					display block
					transition opacity .17s ease-in-out
					&:hover
						opacity .75
				
					